<script>
const products = [
  {name:"Pikachu", price:10, image:"https://i.imgur.com/7X1FQl0.png", description:"Electric type starter Pokémon card"},
  {name:"Charizard", price:50, image:"https://i.imgur.com/3X2XGQy.png", description:"Powerful Fire-type Legendary card"},
  {name:"Bulbasaur", price:8, image:"https://i.imgur.com/5VZpQ5X.png", description:"Grass type starter Pokémon card"},
  {name:"Squirtle", price:12, image:"https://i.imgur.com/A9e6Lw2.png", description:"Water type starter Pokémon card"},
  {name:"Jigglypuff", price:7, image:"https://i.imgur.com/WaVnCJd.png", description:"Cute Normal type Pokémon card"}
];

const container = document.getElementById('products-container');

products.forEach(product => {
  const card = document.createElement('div');
  card.className = 'product-card';
  card.innerHTML = `
    <img src="${product.image}" alt="${product.name}">
    <h3>${product.name}</h3>
    <p>$${product.price}</p>
    <p>${product.description}</p>
    <button onclick="alert('Added ${product.name} to cart!')">Add to Cart</button>
  `;
  container.appendChild(card);
});
</script>

